.nav-list {
  background: #fff;
  width: 750rpx;
  height: 100rpx;
  border-bottom: 1px solid #E5E5E5;
}

.nav-active {
  color: #FD8732;
  position: relative;
}

.nav-active::after {
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  content: '';
  width: 22rpx;
  height: 8rpx;
  background: #FD8731;
  border-radius: 4rpx;
}
