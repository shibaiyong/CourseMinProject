@import "../../app.wxss";
.edu-list-item{
  margin:0 auto;
  margin-top:20rpx;
  width: 690rpx;
  padding-bottom: 28rpx;
  border-radius: 17rpx ;
  background: #fff;
  position: relative;

}
.item-image{
  width: 690rpx;
  height: 280rpx;
  border-radius: 17rpx 17rpx 0 0;
  margin-bottom: 20rpx;
}

.item-desc{
  width: 690rpx;
  border-radius:0 0 17rpx 17rpx; 

}
.item-desc-l{
  padding-left: 21rpx;
  box-sizing: border-box;

}
.item-desc-r{
  text-align: right;
padding-right: 27rpx;
}
.title{
font-size: 32rpx;
line-height: 32rpx;
font-weight: bold;
color: #000000;
}
.date{
  margin-top:19rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
  line-height: 28rpx;
}
.price{
font-size: 32rpx;
font-weight: 500;
line-height: 32rpx;
display: flex;
align-items: center;
}

.zaoniao{
  color: #FD8732;
  display: flex;
  align-items: center;
}

.zaoniao text{
  display: inline-block;
  height:30rpx;
  line-height: 24rpx;
}

.zaoniao image {
  display: inline-block;
  width:90rpx;
  height:30rpx;
}
.price-money{
  color: #FD8732;
  
}
.price-free{
  color: #00C809;
}
.nums,.ot_price{
  margin-top:14rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
  line-height: 28rpx;
}

.ot_price{
  font-size: 24rpx;
  text-decoration: line-through;
}
.edu-tag{
  position: absolute;
  top:125rpx;
  right:19rpx;
  width: 176rpx;
  height: 176rpx;
}