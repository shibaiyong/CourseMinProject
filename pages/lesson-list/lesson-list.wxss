.header-nav {
  position: fixed;
  top:0;
  left:0;
  background-color: #fff;
  z-index: 9;
  width: 750rpx;
  height: 90rpx;
  line-height: 90rpx;
  background: #fff;
  box-sizing: border-box;
  border-bottom: 1px solid #E5E5E5;
}
.header-nav-margin-bottom{
  width: 100%;
  height: 90rpx;
}

.header-scroll-view {
  white-space: nowrap;
  width: 100%;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}


.header-scroll-view-sub {
  padding-left: 20rpx;
  padding-right: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
}

.header-nav-item {
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  font-weight: 400;
  /* line-height: 42px; */
  color: rgba(26, 26, 26, 1);
  margin-right: 60rpx;
}


.active {
  position: relative;
  font-size: 30rpx;
  font-weight: bold;
  color: #FD8732;
}

.active::after {
  position: absolute;
  bottom: 20rpx;
  left: 50%;
  transform: translateX(50%);
  margin-left: -50%;
  content: "";
  width: 50%;
  height: 6rpx;
  background: #FD8732;
}

.goods-container{
  width: 690rpx;
  margin:0 auto;
  margin-top:44rpx;
  margin-bottom: 11rpx;
  flex-wrap: wrap;
}
/*去掉当前滚动条进度*/
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}