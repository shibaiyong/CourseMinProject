.nav-list {
  background: #fff;
  width: 750rpx;
  height: 100rpx;
  border-bottom: 1px solid #E5E5E5;
}

.nav-active {
  color: #FD8732;
  position: relative;
}

.nav-active::after {
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  content: '';
  width: 22rpx;
  height: 8rpx;
  background: #FD8731;
  border-radius: 4rpx;
}

.item-lession {
  width: 720rpx;
  margin-left: 30rpx;
  border-bottom: 1px solid #E5E5E5;
  box-sizing: border-box;
  padding: 20rpx 20rpx 20rpx 0;
  flex-wrap: nowrap;
}

.item-image {
  width: 190rpx;
  height: 140rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
}

.item-title {
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  line-height: 36rpx;

}
.item-lession:nth-last-child(1){
  border-bottom: 0;
}
.c{
  border-bottom: 1px solid #E5E5E5; 
}