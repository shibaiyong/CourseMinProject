/* pages/lesson-listen/lesson-listen.wxss */
.read{
  padding:30rpx 28rpx;
  box-sizing:border-box;
}

.title{
  height: 42rpx;
  font-size: 32rpx;
  color: #000000;
  line-height: 42rpx;
  margin-bottom:20rpx;
}
.content{
  font-size: 30rpx;
  color: #000000;
  line-height: 48rpx;
}

.chapterscontainer{
  width:100%;
  height: 90rpx;
}

.choosechapter{
  display: flex;
  width:100%;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  box-sizing: border-box;
  position: fixed;
  left:0;
  bottom: 0;
  height: 90rpx;
  background:white;
}

.choosechapter text{
  font-size:32rpx;
  color:yellowgreen;
}

.switchMode{
  position: fixed;
  bottom: 200rpx;
  right:30rpx;
  z-index: 2;
}
.ear, .eye{
  width:80rpx;
  height: 80rpx;
  display: block;
}
.eye{
  margin-bottom:20rpx;
}