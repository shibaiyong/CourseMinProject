.item-lession {
  width: 720rpx;
  margin-left: 30rpx;
  border-bottom: 1px solid #E5E5E5;
  box-sizing: border-box;
  padding: 20rpx 20rpx 20rpx 0;
  flex-wrap: nowrap;
}

.item-image {
  width: 190rpx;
  height: 140rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
}

.item-title {
  padding-top: 8rpx;
  box-sizing: border-box;
  min-height: 140rpx;
  position: relative;
  width: 335rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  line-height: 36rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
}
.time{
font-size: 24rpx;
font-weight: 400;
color: #999999;
line-height: 24rpx;

}
